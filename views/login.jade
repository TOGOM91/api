              if u.profilPic
                img(src=u.profilPic alt=u.name)
              else
                .avatar-placeholder #{u.name ? u.name.charAt(0).toUpperCase() : 'U'}
            .user-card-info
              h3.user-card-name= u.name
              p.user-card-username @#{u.username}
              p.user-card-email= u.email
              span.user-card-badge(class=u.role === 'admin' ? 'badge-admin' : 'badge-user')= u.role
