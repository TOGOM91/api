extends layout

block content
  .profile-container
    .profile-header
      .profile-avatar-large
        if user.profilPic
          img(src=user.profilPic alt="Photo de profil")
        else
          .avatar-placeholder-large #{user.name ? user.name.charAt(0).toUpperCase() : 'U'}
      
      .profile-info
        h1.profile-name= user.name
        p.profile-email= user.email
        span.profile-badge(class=user.role === 'admin' ? 'badge-admin' : 'badge-user')= user.role
    
    .profile-actions
      a.btn-primary(href=`/users/edit/${user._id}`)
        span.icon ‚úèÔ∏è
        | Modifier le profil
      a.btn-outline(href="/addProduct")
        span.icon ‚ûï
        | Ajouter un produit
      form.delete-form(action=`/users/${user._id}?_method=DELETE` method="POST" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer votre compte ?')")
        button.btn-danger(type="submit")
          span.icon üóëÔ∏è
          | Supprimer le compte
  
  .users-section
    h2.section-title Tous les utilisateurs
    
    if users && users.length
